{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "target": "esnext",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": false,
    "skipLibCheck": true
  },
  "include": [
    "./api/*.ts",
    "./*.js",
    "src/**/*.ts",
    "./index.ts"
  ],
}
